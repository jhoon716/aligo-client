{
  "name": "aligo-client",
  "version": "0.1.0",
  "description": "Node.js (ESM) TypeScript SDK for the Aligo SMS/LMS/MMS API",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist dist-tests",
    "test": "npm run build && tsc -p tsconfig.test.json && node --test \"dist-tests/**/*.js\"",
    "lint": "tsc -p tsconfig.json --noEmit",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=22"
  },
  "sideEffects": false,
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "^3.8.0",
    "typescript": "^5.3.3"
  },
  "license": "MIT"
}
